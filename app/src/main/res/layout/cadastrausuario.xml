<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planodefundo"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:text="Cadastro de Novo UsuÃ¡rio"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="120dp"
            android:maxWidth="120dp"
            android:layout_marginTop="40dp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:text="Nome "/>

        <EditText
            android:id="@+id/Nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="70dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="120dp"
            android:maxWidth="120dp"
            android:layout_marginTop="90dp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:text="Sobrenome "/>

        <EditText
            android:id="@+id/Sobrenome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="120dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="120dp"
            android:maxWidth="120dp"
            android:layout_marginTop="140dp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:text="E-mail"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="120dp"
            android:maxWidth="120dp"
            android:layout_marginTop="190dp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:text="Data de Nascimento"/>

        <EditText
            android:id="@+id/dataDenascimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="210dp"
            android:inputType="date"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="120dp"
            android:maxWidth="120dp"
            android:layout_marginTop="240dp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:text="Senha"/>

        <EditText
            android:id="@+id/Senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="60dp"
            android:inputType="textPassword"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="120dp"
            android:maxWidth="120dp"
            android:layout_marginTop="290dp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:text="Digite novamente a senha"/>

        <EditText
            android:id="@+id/digitenovamenteaSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="60dp"
            android:inputType="textPassword"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="370dp"
            android:layout_marginLeft="150dp"
            android:onClick=""
            android:textAppearance="@android:style/TextAppearance.Large"
            android:text="Criar"/>
    </RelativeLayout>
</LinearLayout>